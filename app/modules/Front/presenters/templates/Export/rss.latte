{contentType application/xml}
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
	{cache expiration => '10 minutes'}
	<channel>
		<title>Nas blog</title>
		<link>{link List:}</link>

		<item n:foreach="$posts as $post">
			<title>{$post->title}</title>
			<description>{$post->content}</description>
			<link>{link Detail: $post->id}</link>
			<pubDate>{$post->published_at|date:'r'}</pubDate>
		</item>

	</channel>
	{/cache}
</rss>